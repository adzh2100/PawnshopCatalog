промяна. -->

<pawnshop>
    <!-- вариант 1 -->
    <jewellery>
        <!-- в тези категории да са залозите, или самите продукти -->
        <res_name ref=""></res_name>
    </jewellery>
    <electronics>
        <res_name ref=""></res_name>
    </electronics>
    <antiques>
        <res_name ref=""></res_name>
    </antiques>
    <art>
        <res_name ref=""></res_name>
    </art>
    <precious_metals>
        <res_name ref=""></res_name>
    </precious_metals>

    <!-- вариант 2 -->
    <active>
        <pawn ref=""></pawn>
    </active>
    <pending>
        <pawn ref=""></pawn>
    </pending>
    <settled>
        <pawn ref=""></pawn>
    </settled>
    <EMNR>
        <pawn ref=""></pawn>
    </EMNR>

    <!-- или да имаме секция -->
    <zalozi>
        <zalog>
            <!-- danni za zaloga -->
            <resurs ref=""></resurs>
        </zalog>
    </zalozi>

    <resursi>
        <resurs id=""></resurs>
        <!-- danni za resursa -->
    </resursi>
    
    <!-- ако сме във вариант 2 ID ще е атрибут на pawn -->
    <pawn status="Active / Pending / Settled / EMNR (expired, money not returned)">
        <amount_given>
            <currency></currency>
            <value></value>
        </amount_given>
        <resource id="" type="Jewellery|Electronics|Antiques|Art|Precious_Metals">
            <type></type>
            <creator type="Author/Manufacturer">
                <name></name>
            </creator>
            <model>gold</model>
            <pawnshop_evaluation>
                <currency></currency>
                <value></value>
            </pawnshop_evaluation>
            <description></description>
            <images>
                <img href="link"></img>
            </images>
        </resource>
        <recipient_employee>
            <name></name>
            <surname></surname>
            <UCN></UCN>
            <permanent_address></permanent_address>
            <phone_number></phone_number>
            <ID_card_number></ID_card_number>
        </recipient_employee>
        <submitter>
            <name></name>
            <surname></surname>
            <UCN></UCN>
            <permanent_address></permanent_address>
            <phone_number></phone_number>
            <ID_card_number></ID_card_number>
        </submitter>
        <term></term>
    </pawn>

</pawnshop>